@page "/server/{GuildId}"
@using Discord
@using Discord.WebSocket
@using Scrappy.Shared
@inject DiscordSocketClient DiscordClient

<ServerShell GuildId="@GuildId" ActivePage="">
    @if (Guild != null)
    {
        <!-- Key Stats Grid -->
        <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="glass p-6 rounded-3xl flex flex-col items-center justify-center hover:scale-[1.02] transition-transform">
                <span class="text-3xl font-black text-blue-500 mb-1">@HumanCount</span>
                <span class="text-[10px] uppercase font-bold tracking-widest text-gray-400">Humans</span>
            </div>
            <div class="glass p-6 rounded-3xl flex flex-col items-center justify-center hover:scale-[1.02] transition-transform">
                <span class="text-3xl font-black text-purple-500 mb-1">@BotCount</span>
                <span class="text-[10px] uppercase font-bold tracking-widest text-gray-400">Bots</span>
            </div>
            <div class="glass p-6 rounded-3xl flex flex-col items-center justify-center hover:scale-[1.02] transition-transform">
                <span class="text-3xl font-black text-green-500 mb-1">@OnlineCount</span>
                <span class="text-[10px] uppercase font-bold tracking-widest text-gray-400">Online</span>
            </div>
        </div>

        <!-- Server Info Card -->
        <div class="glass p-6 rounded-3xl mb-8 flex flex-col md:flex-row items-center justify-between gap-6">
            <div class="flex items-center gap-4 w-full md:w-auto">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-accent-blue flex items-center justify-center text-white shadow-lg">
                    <span class="material-icons-round text-3xl">dns</span>
                </div>
                <div>
                    <h3 class="font-bold text-lg">Server Information</h3>
                    <p class="text-xs text-gray-500">Created on @Guild.CreatedAt.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 w-full md:w-auto">
                <div class="bg-white/50 dark:bg-black/20 p-3 rounded-xl">
                    <p class="text-[10px] text-gray-500 uppercase font-bold">Owner</p>
                    <div class="flex items-center gap-2 mt-1">
                        <img src="@(Guild.Owner?.GetAvatarUrl() ?? Guild.Owner?.GetDefaultAvatarUrl())" class="w-5 h-5 rounded-full" />
                        <span class="text-xs font-bold truncate max-w-[100px]">@Guild.Owner?.Username</span>
                    </div>
                </div>
                <div class="bg-white/50 dark:bg-black/20 p-3 rounded-xl">
                    <p class="text-[10px] text-gray-500 uppercase font-bold">Boosts</p>
                    <p class="text-sm font-bold mt-1 text-pink-500">Level @Guild.PremiumTier</p>
                </div>
                <div class="bg-white/50 dark:bg-black/20 p-3 rounded-xl">
                    <p class="text-[10px] text-gray-500 uppercase font-bold">Security</p>
                    <p class="text-sm font-bold mt-1 text-green-500">@Guild.VerificationLevel</p>
                </div>
                <div class="bg-white/50 dark:bg-black/20 p-3 rounded-xl">
                    <p class="text-[10px] text-gray-500 uppercase font-bold">ID</p>
                    <p class="text-sm font-mono font-bold mt-1 text-gray-500">@Guild.Id</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Channels -->
            <div class="glass p-6 rounded-3xl">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="font-bold flex items-center gap-2">
                        <span class="material-icons-round text-gray-400">tag</span>
                        Channels
                    </h3>
                    <span class="bg-gray-100 dark:bg-white/10 px-2 py-1 rounded-lg text-xs font-bold">@Guild.Channels.Count</span>
                </div>
                <div class="space-y-3">
                    <div class="flex justify-between text-sm p-2 rounded-xl hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                        <span class="text-gray-500">Text Channels</span>
                        <span class="font-bold">@Guild.TextChannels.Count</span>
                    </div>
                    <div class="flex justify-between text-sm p-2 rounded-xl hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                        <span class="text-gray-500">Voice Channels</span>
                        <span class="font-bold">@Guild.VoiceChannels.Count</span>
                    </div>
                    <div class="flex justify-between text-sm p-2 rounded-xl hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                        <span class="text-gray-500">Categories</span>
                        <span class="font-bold">@Guild.CategoryChannels.Count</span>
                    </div>
                </div>
            </div>

            <!-- Roles -->
            <div class="glass p-6 rounded-3xl">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="font-bold flex items-center gap-2">
                        <span class="material-icons-round text-gray-400">verified_user</span>
                        Roles
                    </h3>
                    <span class="bg-gray-100 dark:bg-white/10 px-2 py-1 rounded-lg text-xs font-bold">@Guild.Roles.Count</span>
                </div>
                <div class="flex flex-wrap gap-2">
                    @foreach (var role in Guild.Roles.OrderByDescending(r => r.Position).Take(12))
                    {
                        <span class="px-3 py-1.5 rounded-xl text-[10px] font-bold shadow-sm" 
                              style="background-color: @(role.Color.RawValue == 0 ? "#e5e7eb" : $"#{role.Color.RawValue:X6}20"); color: @(role.Color.RawValue == 0 ? "#6b7280" : $"#{role.Color.RawValue:X6}")">
                            @role.Name
                        </span>
                    }
                    @if (Guild.Roles.Count > 12)
                    {
                        <span class="px-3 py-1.5 rounded-xl text-[10px] font-bold bg-gray-100 dark:bg-white/5 text-gray-500">
                            +@(Guild.Roles.Count - 12) more
                        </span>
                    }
                </div>
            </div>
        </div>
    }
</ServerShell>

@code {
    [Parameter]
    public string GuildId { get; set; } = "";

    private SocketGuild? Guild => ulong.TryParse(GuildId, out var id) ? DiscordClient.GetGuild(id) : null;

    private int BotCount => Guild?.Users.Count(u => u.IsBot) ?? 0;
    private int HumanCount => (Guild?.MemberCount ?? 0) - BotCount;
    private int OnlineCount => Guild?.Users.Count(u => u.Status != UserStatus.Offline && !u.IsBot) ?? 0;
}
