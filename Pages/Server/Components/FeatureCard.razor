@inject NavigationManager Navigation

<div class="glass rounded-3xl p-6 relative group border-l-4 @(IsEnabled ? "border-l-primary" : "border-l-gray-300 dark:border-l-gray-600") hover:scale-[1.02] transition-transform cursor-pointer"
     @onclick="Navigate">
    <div class="flex justify-between items-start mb-4">
        <div class="w-12 h-12 rounded-2xl @(IsEnabled ? "bg-primary/10 text-primary" : "bg-gray-100 dark:bg-white/5 text-gray-400") flex items-center justify-center transition-colors">
            <span class="material-icons-round text-2xl">@Icon</span>
        </div>
        
        <!-- Toggle Switch -->
        <label class="relative inline-flex items-center cursor-pointer" @onclick:stopPropagation>
            <input type="checkbox" checked="@IsEnabled" @onchange="OnToggleCallback" class="sr-only peer">
            <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-primary"></div>
        </label>
    </div>
    
    <div>
        <h3 class="font-bold text-lg mb-1 @(IsEnabled ? "text-gray-900 dark:text-white" : "text-gray-500")">@Title</h3>
        <p class="text-xs text-gray-500 mb-4 h-8 line-clamp-2">@Description</p>
        
        @if (!string.IsNullOrEmpty(ConfigUrl) && IsEnabled)
        {
            <div class="flex items-center text-xs font-bold text-primary group-hover:underline transition-opacity">
                Configure <span class="material-icons-round text-sm ml-1">arrow_forward</span>
            </div>
        }
        else
        {
            <div class="h-4"></div> <!-- Spacer -->
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string Icon { get; set; } = "extension";
    [Parameter] public bool IsEnabled { get; set; }
    [Parameter] public string? ConfigUrl { get; set; }
    [Parameter] public EventCallback<bool> OnToggle { get; set; }

    private async Task OnToggleCallback(ChangeEventArgs e)
    {
        IsEnabled = (bool)e.Value!;
        await OnToggle.InvokeAsync(IsEnabled);
    }

    private void Navigate()
    {
        if (!string.IsNullOrEmpty(ConfigUrl) && IsEnabled)
        {
            Navigation.NavigateTo(ConfigUrl);
        }
    }
}
