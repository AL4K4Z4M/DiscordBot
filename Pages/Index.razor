@page "/"
@using Discord.WebSocket
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Configuration
@inject DiscordSocketClient DiscordClient
@inject NavigationManager Navigation
@inject IConfiguration Configuration
@inject AuthenticationStateProvider AuthenticationStateProvider

<AuthorizeView>
    <Authorized>
        <div class="flex flex-col items-center justify-center min-h-[50vh] space-y-4">
            <div class="animate-spin w-8 h-8 border-4 border-primary border-t-transparent rounded-full"></div>
            <p class="text-gray-500 font-medium">Redirecting to servers...</p>
        </div>
    </Authorized>
    <NotAuthorized>
        <!-- Public Landing Page -->
        <div class="flex flex-col items-center justify-center min-h-[80vh] px-6">
            @if (DiscordClient.CurrentUser != null)
            {
                <img src="@DiscordClient.CurrentUser.GetAvatarUrl(size: 512)" alt="Bot Avatar" class="w-40 h-40 mb-8" />
            }
            else
            {
                <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-primary to-accent-blue flex items-center justify-center text-white shadow-xl shadow-primary/30 mb-8">
                    <span class="material-icons-round text-4xl">smart_toy</span>
                </div>
            }
            
            <h1 class="text-3xl font-black tracking-tight text-center mb-2">Scrappy Bot</h1>
            <p class="text-gray-400 text-center text-sm max-w-[250px] mb-10 leading-relaxed">
                The advanced discord companion for your community.
            </p>

            <div class="w-full max-w-xs space-y-3">
                <a href="@InviteUrl" target="_blank" class="flex items-center justify-center w-full bg-primary text-white font-bold py-4 rounded-2xl shadow-lg shadow-primary/30 active:scale-95 transition-transform">
                    Add to Discord
                </a>
                <a href="login" class="flex items-center justify-center w-full bg-white dark:bg-surface-dark font-bold py-4 rounded-2xl shadow-sm text-gray-700 dark:text-gray-200 active:scale-95 transition-transform">
                    Login Dashboard
                </a>
            </div>
            
            <div class="mt-12 grid grid-cols-2 gap-8 text-center w-full max-w-xs opacity-60">
                <div>
                    <div class="text-xl font-bold text-gray-800 dark:text-white">@GuildCount</div>
                    <div class="text-[10px] font-bold uppercase tracking-wider text-gray-400">Servers</div>
                </div>
                <div>
                    <div class="text-xl font-bold text-gray-800 dark:text-white">@DiscordClient.Latency<span class="text-xs align-top">ms</span></div>
                    <div class="text-[10px] font-bold uppercase tracking-wider text-gray-400">Latency</div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private int GuildCount => DiscordClient.Guilds?.Count ?? 0;
    
    // Use Config ID for reliability
    private string InviteUrl => $"https://discord.com/api/oauth2/authorize?client_id={Configuration["Discord:ClientId"]}&permissions=8&scope=bot%20applications.commands";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            Navigation.NavigateTo("servers");
        }
        
        DiscordClient.Ready += Refresh;
        DiscordClient.JoinedGuild += _ => Refresh();
        DiscordClient.LeftGuild += _ => Refresh();
    }

    private Task Refresh() => InvokeAsync(StateHasChanged);
    private Task Refresh(object? _) => Refresh();
}